<Window x:Class="City.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulation Status" Height="165" Width="603"  
        WindowStartupLocation="CenterScreen"
        WindowStyle="ThreeDBorderWindow">
        <StackPanel VerticalAlignment="Center">
            <Label Name="progressLabel" Content="0%" FontSize="14" />
            <ProgressBar Name="progressBar" Height="31" IsIndeterminate="False"/>
            <DockPanel>
                <Label Name="progressDescLabel" HorizontalAlignment="Left" FontSize="14" />
                <Button Content="Cancel" x:Name="cancelButton" Click="CancelBtnClick" HorizontalAlignment="Right" FontSize="14" />
            </DockPanel>
        </StackPanel>
</Window>